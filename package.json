{
  "name": "mcx-project",
  "version": "1.0.0",
  "description": "MCP Chrome Feedback - 提供MCP服务与Chrome扩展交互的反馈收集功能",
  "private": true,
  "workspaces": [
    "mcp-chrome-feedback"
  ],
  "scripts": {
    "build": "npm run build:mcp",
    "build:mcp": "cd mcp-chrome-feedback && npm run build",
    "dev": "cd mcp-chrome-feedback && npm run dev",
    "start": "cd mcp-chrome-feedback && npm start",
    "test": "cd mcp-chrome-feedback && npm test",
    "clean": "cd mcp-chrome-feedback && npm run clean",
    "install:all": "npm install && cd mcp-chrome-feedback && npm install",
    "version:sync": "node scripts/sync-versions.js",
    "prepare:release": "npm run clean && npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "chrome-extension",
    "feedback",
    "interactive",
    "ai",
    "cursor",
    "browser-automation"
  ],
