{
  "manifest_version": 3,
  "name": "MCP Feedback Collector",
  "version": "1.0.0",
  "description": "Browser extension for interactive user feedback collection with MCP integration",
  
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel",
    "tabs",
    "scripting"
  ],
  
  "host_permissions": [
    "<all_urls>",
    "ws://127.0.0.1:8797/*",
    "http://127.0.0.1:8797/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "element-inspector.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["sidepanel.css"],
      "matches": ["<all_urls>"]
    }
  ]
}